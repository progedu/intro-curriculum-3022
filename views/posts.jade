doctype html
html(lang="jp")
  head
    meta(charset="UTF-8")
    title 秘密の匿名掲示板
  body
    h1 秘密の匿名掲示板
    a(href="/logout") ログアウト
    h2 新規投稿
    form(method="post", action="/posts")
      div
        textarea(name="content", cols=40, rows=4)
      div
        button(type="submit") 投稿
    h2 投稿一覧
    each post in posts
      p #{post.id}: #{post.content}
      p 投稿日時: #{new Date(post.createdAt).toISOString()}
      // toISOString => 2016-11-11T12:02:40.261Z
      hr
